generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  MOD
  ADMIN
}

model User {
  id        String    @id @default(uuid())
  fullname  String
  username  String    @unique
  email     String    @unique
  password  String
  role      UserRole  @default(USER)
  createdAt DateTime
  updatedAt DateTime  @updatedAt
  sessions  Session[]
}

model Session {
  id           String    @id @default(uuid())
  refreshToken String    @unique
  ipAddress    String
  userAgent    String
  device       String
  os           String
  browser      String
  location     String
  timezone     String
  language     String
  user         User      @relation(fields: [userId], references: [id])
  userId       String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  expiresAt    DateTime?
}
